@using Microsoft.AspNetCore.Mvc.Localization
@using CoreExplorerV3.Helpers

@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResources> SharedLocalizer

@{bool hideToggle = ViewData["LayoutNavbarHideToggle"] != null && ViewData["LayoutNavbarHideToggle"].ToString() == "True";}
<!-- Layout navbar -->
<nav class="layout-navbar navbar navbar-expand-lg align-items-lg-center bg-navbar-theme container-p-x" id="layout-navbar">
    <!-- Brand -->
    <a href="https://otocash.io/" class="navbar-brand"><img src='/images/coins_custom/oto_45.png' width='30' height='30' style='margin-right: 10px'>OTOCASH Block Explorer</a>
    @if (!hideToggle)
    {
        <!-- Sidenav toggle -->
        <div class="layout-sidenav-toggle navbar-nav align-items-lg-center mr-auto mr-lg-4">
            <a class="nav-item nav-link px-0 ml-2" href="javascript:void(0)">
                <i class="ion ion-md-menu text-large align-middle"></i>
            </a>
        </div>
    }


    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#layout-navbar-collapse">
        <span class="ion ion-md-search" style="font-size: 20px"></span>
    </button>
    @if (!ViewBag.IsClosed)
    {
        <div class="navbar-collapse collapse" id="layout-navbar-collapse">
            <div class="navbar-nav align-items-lg-center ml-auto search-box-custom">
                <div class="input-group input-group-md search-for">
                    <input onkeydown="if (event.keyCode == 13) window.open('@ViewBag.AppendUrl/search/' + document.getElementById('search_id').value, '_self')" type="text" id="search_id" class="form-control" placeholder="@SharedLocalizer["You may search a block height, block hash, tx hash or address."]">
                    <span class="input-group-append">
                        <button class="btn btn-secondary btn-md" type="button" onclick="window.open('@ViewBag.AppendUrl/search/' + document.getElementById('search_id').value, '_self')">@SharedLocalizer["Go!"]</button>
                    </span>
                </div>
            </div>
        </div>
    }
</nav>
<!-- / Layout navbar -->
