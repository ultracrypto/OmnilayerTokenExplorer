@using Microsoft.AspNetCore.Mvc.Localization
@using CoreExplorerV3.Helpers

@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResources> SharedLocalizer
<!DOCTYPE html>
<html lang="en" class="default-style@{WriteLiteral(ViewBag.V3Layout);}">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="IE=edge,chrome=1" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>@ViewData["Title"] - @SharedLocalizer["CryptoCore Explorer"]</title>
    <!-- Main font -->
    <!-- Icons. Uncomment required icon fonts -->
    @if (!string.IsNullOrEmpty(ViewBag.Favicon))
    {
        <link rel="icon" href="~/images/favicon/@ViewBag.Favicon">
    }
    <environment include="Development">

        <link rel="stylesheet" href="~/css/bundle.css" crossorigin="anonymous" />

        <!-- <link rel="stylesheet" href="~/css/g.css" crossorigin="anonymous" />
             <link rel="stylesheet" href="~/vendor/fonts/ionicons.css" />
            <link rel="stylesheet" href="~/vendor/fonts/open-iconic.css" />
            <link rel="stylesheet" href="~/vendor/fonts/pe-icon-7-stroke.css" />
            <link rel="stylesheet" href="~/vendor/css/bootstrap.css" />
            <link rel="stylesheet" href="~/vendor/css/appwork.css" />
            <link rel="stylesheet" href="~/vendor/css/colors.css" />
            <link rel="stylesheet" href="~/vendor/css/uikit.css" />
            <link rel="stylesheet" href="~/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
            <link rel="stylesheet" href="~/css/site.css" />
            <link rel="stylesheet" href="~/vendor/libs/datatables/datatables.css">
            <link rel="stylesheet" href="~/@{WriteLiteral(ViewBag.V3Theme);}.css" /> -->
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/bundle.css" crossorigin="anonymous" />
    </environment>
    @if (!string.IsNullOrEmpty(ViewBag.V3ThemeCss))
    {
        <style>@Html.Raw(ViewBag.V3ThemeCss)</style>
    }
    @RenderSection("Styles", required: false)
</head>
<body>

    @RenderBody()

    <!-- Core scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js" crossorigin="anonymous"></script>
    <environment include="Development">
        <script src="~/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
        <script src="~/vendor/js/layout-helpers.js"></script>
        <script src="~/vendor/libs/popper/popper.js"></script>
        <script src="~/vendor/js/bootstrap.js"></script>
        <script src="~/vendor/js/sidenav.js"></script>
        <script src="~/lib/chart.js/dist/Chart.min.js"></script>
        <script src="~/vendor/libs/datatables/datatables.js"></script>
        <script src="~/vendor/libs/datatables/dataTables.keepConditions.min.js"></script>
        <script src="~/vendor/libs/validate/validate.js"></script>
        <script src="~/js/site.es5.js"></script>
        @RenderSection("Scripts", required: false)
    </environment>
    <environment exclude="Development">
        <script src="~/js/all.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </environment>
</body>
</html>
