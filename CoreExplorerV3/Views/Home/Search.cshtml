@using Microsoft.AspNetCore.Mvc.Localization
@using CoreExplorerV3.Helpers
@using System.Threading
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Nothing found"];
}

<div class="font-weight-bold py-3 mb-4 d-flex">
    <div>
        <img src="~/images/coins_custom/@{WriteLiteral(ViewBag.V3Logo);}_45.png" width="45" height="45" id="logo_45" />
    </div>
    <div class="ml-1">
        <h4 class="font-weight-bold margin0">@SharedLocalizer["{0} block explorer", ViewBag.CoinName]</h4>
        <div class="text-muted small mt-1 font-weight-normal">
            @string.Format(SharedLocalizer["Today is {0}"].Value, @DateTime.UtcNow.Date.ToString("D", Thread.CurrentThread.CurrentUICulture))
        </div>
    </div>
</div>
<div class="alert alert-warning">
    <span class="ion ion-ios-warning text-large" style="color: darkgoldenrod"></span> &nbsp; <span class="text-large">@SharedLocalizer["Nothing found"]</span><br /><br />
        @SharedLocalizer["Your search did not match any transactions, blocks or address."]<br /><br />
        @SharedLocalizer["Why"]:<br />
        - @SharedLocalizer["Transaction or block may be not sync yet."]<br />
        - @SharedLocalizer["Address does not cointains any transactions"].<br />
        - @SharedLocalizer["Try different address, transaction or block."]<br />
</div>


